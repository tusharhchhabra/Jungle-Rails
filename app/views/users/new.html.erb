<!-- Wrap the form in a container for alignment -->
<div class="container">
  <h1 class="text-center my-4">Signup!</h1>

  <%= form_for :user, url: '/users', html: { class: 'needs-validation', novalidate: '' } do |f| %>

    <div class="form-group mt-2">
      <label for="name">Name:</label>
      <%= f.text_field :name, class: 'form-control', id: 'name', required: true %>
      <div class="invalid-feedback">Please provide a name.</div>
    </div>

    <div class="form-group mt-2">
      <label for="email">Email:</label>
      <%= f.text_field :email, class: 'form-control', id: 'email', required: true %>
      <div class="invalid-feedback">Please provide an email.</div>
    </div>

    <div class="form-group mt-2">
      <label for="password">Password:</label>
      <%= f.password_field :password, class: 'form-control', id: 'password', required: true %>
      <div class="invalid-feedback">Please provide a password.</div>
    </div>

    <div class="form-group mt-2">
      <label for="password_confirmation">Password Confirmation:</label>
      <%= f.password_field :password_confirmation, class: 'form-control', id: 'password_confirmation', required: true %>
      <div class="invalid-feedback">Please confirm your password.</div>
    </div>

    <%= f.submit "Submit", class: 'btn btn-primary mt-4' %>

  <% end %>
</div>
